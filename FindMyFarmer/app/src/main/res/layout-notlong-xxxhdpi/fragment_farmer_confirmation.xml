<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".LoginAndRegistration.View.FarmerConfirmationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConfirmFarmerConstraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="359dp"
            android:layout_marginTop="52dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/areyoufarmer" />

        <TextView
            android:id="@+id/AreYouFarmerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/roboto"
            android:text="@string/are_you_farmer"
            android:textColor="#009179"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/YesFarmerBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/YesFarmerBtn"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginBottom="44dp"
            android:background="@drawable/custom_round_button_yes"
            android:text="@string/yes"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.244"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/NoFarmerBtn"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/custom_round_button_no"
            android:text="@string/no"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/YesFarmerBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.76"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/YesFarmerBtn"
            app:layout_constraintVertical_bias="0.0" />

        <ProgressBar
            android:id="@+id/progressRegistration"
            style="?android:attr/progressBarStyle"
            android:layout_width="64dp"
            android:layout_height="58dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/YesFarmerBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
