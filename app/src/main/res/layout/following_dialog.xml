<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="49dp"
        android:gravity="center_horizontal"
        android:text="Keep up to date with this farmer?"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/Image_Following" />

    <ImageView
        android:id="@+id/Image_Following"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_marginStart="69dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="32dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toTopOf="@+id/Farmers_Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/default_farm_image"
        tools:srcCompat="@drawable/default_farm_image" />

    <TextView
        android:id="@+id/Farmers_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="157dp"
        android:layout_marginTop="295dp"
        android:layout_marginEnd="157dp"
        android:text="Farmer Name"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Following"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp"
        android:background="#e57373"
        android:text="Add To Following"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="@+id/Farmers_Name" />
</androidx.constraintlayout.widget.ConstraintLayout>
