<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".LoginAndRegistration.View.FarmerConfirmationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConfirmFarmerConstraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="369dp"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/areyoufarmer" />

        <TextView
            android:id="@+id/AreYouFarmerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto"
            android:text="@string/are_you_farmer"
            android:textColor="#009179"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <Button
            android:id="@+id/YesFarmerBtn"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="92dp"
            android:background="@drawable/custom_round_button_yes"
            android:text="@string/yes"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.26"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AreYouFarmerTextView" />

        <Button
            android:id="@+id/NoFarmerBtn"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/custom_round_button_no"
            android:text="@string/no"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.74"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/YesFarmerBtn" />

        <ProgressBar
            android:id="@+id/progressRegistration"
            style="?android:attr/progressBarStyle"
            android:layout_width="37dp"
            android:layout_height="28dp"
            android:layout_marginTop="36dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AreYouFarmerTextView" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
